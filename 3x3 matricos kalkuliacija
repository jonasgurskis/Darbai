 #include <iostream>

int main()
{
   int x, y;
   int matrix[3][3];
   int a1, a2, a3, b1, b2, b3, c1, c2, c3;
    int a, b, c;
    int Determinantas;

        for (x = 0; x < 3; x++)
        for (y = 0; y < 3; y++)
        std::cin >> matrix[x][y];
    
    a1 = matrix[0][0];
    a2 = matrix[0][1];
    a3 = matrix[0][2];
    b1 = matrix[1][0];
    b2 = matrix[1][1];
    b3 = matrix[1][2];
    c1 = matrix[2][0];
    c2 = matrix[2][1];
    c3 = matrix[2][2];
    
    a = b2 * c3 - b3 * c2;
   b = b1 * c3 - b3 * c1;
   c = b1 * c2 - b2 * c1;
   Determinantas = a1 * a - a2 * b + a3 * c;
std::cout << "your determinant is: " << Determinantas << std::endl;
}


