package com.company;

public class Main
{
    public static void main(String[] args)
    {
         class Staciakampis
         {
             private double a;
             private double b;
            private Staciakampis(double aa, double bb)
            {
                a = aa;
                b = bb;
            }

            private void getPlotis()
            {
                System.out.println("Plotis: " + (a*b));
            }

            private void getPerimetras()
            {
                System.out.println("Perimetras: " + (2 * a + 2 * b));
            }

            private void getIstrizaine()
            {
                System.out.println("Istrizaines ilgis: " + Math.sqrt(a * a + b * b));
            }

            private void getKoordinate()
            {
                System.out.println("X :" + (a / 2) + " Y :" + (b / 2));
            }

        }
        Staciakampis S1 = new Staciakampis(2,5);
        S1.getPlotis();
        S1.getPerimetras();
        S1.getIstrizaine();
        S1.getKoordinate();

        System.out.println();

        Staciakampis S2 = new Staciakampis(4,6);
        S2.getPlotis();
        S2.getPerimetras();
        S2.getIstrizaine();
        S2.getKoordinate();
    }
}
